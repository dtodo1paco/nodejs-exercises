extends ../layout
block navMenu
  li: a(href='/') Home
  li: a(href='/sales') Sales
  li: a(href='/team') Team
  li: a(href='/contact') Contact
  li: a(href='/login') Login

block content
  .wrapper
    form.form-signin(method='post', action='/login')
      h3.form-signin-heading Please, type your credentials
      |
      - if(message){
      p(style='color:red') #{message}
      - }
      input.form-control(type='text', name='username', placeholder='Username' required)
      |
      input.form-control(type='password', name='password', placeholder='Password' required)
      label.checkbox
      |
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
