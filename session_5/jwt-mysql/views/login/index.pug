extends ../layout
block navMenu
  li: a(href='/') Home
  li: a(href='/auth/login') Login

block content
  .wrapper
    form.form-signin(method='post', action='/auth/login')
      h3.form-signin-heading Please, type your credentials
      |
      - if(message){
        - if(message.type === 'error'){
            p(style='color: red') #{message.text}
        - }
        - if(message.type === 'info'){
            p(style='color: green') #{message.text}
        - }
      - }
      input.form-control(type='text', name='username', placeholder='Username' required)
      |
      input.form-control(type='password', name='password', placeholder='Password' required)
      label.checkbox
      |
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
